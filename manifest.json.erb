<% 
version = ENV['VERSION'] or die("movetabtester/manifest.json.erb: VERSION not set")
target = ENV['TARGET'] or die("build.sh.erb: TARGET not set") %>{
    "author": "Eric Promislow",
    "browser_action": {
<% if target == 'firefox' %>
	"browser_style": true,
<% end %>
	"default_icon": {
	    "16": "icons/martini-16x16.png",
	    "24": "icons/martini-24x24.png",
	    "32": "icons/martini-32x32.png"
	},
	"default_title": "MoveTabTester",
	"default_popup": "popup/movetabtester.html"
    },
    "commands": {
	"_execute_browser_action": {
	    "suggested_key": {
		"mac": "MacCtrl+Shift+G",
		"default": "Alt+Shift+G"
	    }
	}
    },
    "default_locale": "en",
    "description": "Test the tabs.move webextensions api call",
<% if target == 'firefox' %>
    "developer": {
	"name": "Eric Promislow",
	"url": "https://github.com/ericpromislow/movetabtester"
    },
<% end %>
    "homepage_url": "https://github.com/ericpromislow/movetabtester",
    "icons": {
	"48": "icons/th-48x48.png",
	"96": "icons/th-96x96.png",
	"128": "icons/th-128x128.png"
    },
    "manifest_version": 2,
    "name": "MoveTabTester",
    "permissions": [
	"tabs",
	"<all_urls>"
    ],
    "short_name": "MoveTabTester",
    "version": "<%= version %>"
}
